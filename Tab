    <script>
        var top = document.querySelector('.top');
        var myul = document.querySelectorAll('ul');
        var myspan = document.querySelectorAll('span');
        //大的排他思想
            for(var j = 0;j<myspan.length;j++)
            {
                //开始给小ul设置索引 用来判断当前你点的是第几个 以此索引来显示下面的内容
                myspan[j].setAttribute('index',j);
                myspan[j].onmouseover = function() {
                       for(var i = 0;i<myspan.length;i++)
                    {
                        myspan[i].style.backgroundColor  = '#000000';
                    }
                    this.style.backgroundColor= '#aaa';
                    var index = this.getAttribute('index');
                    //再次利用排他思想 将所有的先隐藏起来 但是事先需要将第一个显示的设置一下显示
                    for(var i = 0;i<myul.length;i++){
                        myul[i].style.display = 'none';
                    }
                    myul[index].style.display = 'block';
                    // var index = this.getAttribute('index');
                    // console.log(index);
                }
            }
    </script>
